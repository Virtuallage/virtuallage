	<queryString>
		<![CDATA[SELECT
     COALESCE(COUNT(a.account_id)) AS noOfLoans,
     COALESCE(SUM(a.loan_amount)) AS totalAmount,
     i.`institution_name`,
     p.`project_name`,
     bp.`company_name` AS bankName
FROM
     `account` a INNER JOIN `project_inventory` pin ON a.`inventory_id` = pin.`inventory_id`
     INNER JOIN `business_partner` bp ON a.`panel_bank_id` = bp.`partner_id`,
     `project` p INNER JOIN `institution` i ON p.`institution_id` = i.`institution_id`
WHERE
     p.project_id = $P{projectId}
 AND pin.project_id = $P{projectId}
 AND a.purchase_type <> 'PUCSH'
 AND (a.account_status IN ('SSNEW','SSACT'))
GROUP BY
     bp.company_name]]>
	</queryString>
